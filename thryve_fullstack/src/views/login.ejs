  <main class="wrap">
    <div class="shell">

      <!-- LEFT SIDE INFO -->
      <aside class="left">
        <h1>Welcome back üëã</h1>
        <p>Sign in to access your fitness dashboard, recovery insights, and personalized goals.</p>
        <div class="badges">
          <span class="pill">Heart Rate</span>
          <span class="pill">Activity</span>
          <span class="pill">Goals</span>
          <span class="pill">Achievements</span>
        </div>
      </aside>

      <!-- RIGHT SIDE LOGIN CARD -->
      <section class="card" aria-labelledby="t" aria-describedby="s">
        <h2 id="t" class="title">Sign In to THRYVE</h2>
        <p id="s" class="sub">Enter your credentials to continue.</p>

        <!-- ‚úÖ LOGIN FORM -->
        <form action="/login" method="POST">

          <!-- Success and error messages -->
          <p id="ok" class="ok">Signed in successfully. Redirecting‚Ä¶</p>
          <p id="err" class="error">Please enter a valid email and a password of at least 6 characters.</p>

          <!-- EMAIL INPUT FIELD -->
          <div class="field">
            <label for="email">Email Address</label>
            <div class="control">
              <!-- Email icon -->
              <svg class="icon" viewBox="0 0 24 24" fill="none">
                <path d="M4 6h16a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1zm0 2l8 5 8-5"
                 stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <!-- Input box -->
              <input id="email" name="email" type="email" placeholder="you@example.com"
                autocomplete="email" required/>
            </div>
          </div>

          <!-- PASSWORD INPUT FIELD -->
          <div class="field">
            <label for="password">Password</label>
            <div class="control">
              <!-- Lock icon -->
              <svg class="icon" viewBox="0 0 24 24" fill="none">
                <path d="M6 10V8a6 6 0 1 1 12 0v2M6 10h12v8a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2v-8z"
                 stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <!-- Password input -->
              <input id="password" name="password" type="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                autocomplete="current-password" minlength="6" required/>
              <!-- üëÅÔ∏è Show/Hide password button -->
              <button class="toggle" type="button" id="toggle" aria-label="Show password">üëÅÔ∏è</button>
            </div>
            <div class="hint">Use at least 6 characters.</div>
          </div>

          <!-- REMEMBER + FORGOT -->
          <div class="row">
            <label><input id="remember" type="checkbox" style="accent-color:#6ea0ff"> Remember me</label>
            <a href="#">Forgot Password?</a>
          </div>

          <!-- LOGIN BUTTON -->
          <button class="btn" type="submit">Log In ‚Üí</button>

          <!-- SIGN UP LINK -->
          <div class="alt">Don‚Äôt have an account? <a href="#" aria-label="Create account">Create Account</a></div>
        </form>
      </section>
    </div>
  </main>

