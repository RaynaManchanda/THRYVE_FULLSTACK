<% layout = 'layouts/main' %>

<!-- Converted from index.html -->

<!-- Everything visible on the webpage goes inside the body tag -->

  <div class="container">
    <!-- Main wrapper div that groups the entire hero section -->

    <section class="hero">
      <!-- Hero section: the main top part of the website -->

      <div>
        <!-- Left side content block (text part) -->
        <h1>THRYVE</h1>
        <!-- Big main title of your website -->

        <h2>Your Journey to Peak Performance</h2>
        <!-- Subtitle or slogan -->

        <p>
          Track and optimize your fitness with intelligent health monitoring. 
          Get personalized insights to reach your peak performance.
        </p>
        <!-- Paragraph explaining what THRYVE is about -->

        <div class="badges">
          <!-- Container for feature badges (small labels showing key features) -->
          <span class="pill heart">‚ù§ Heart Rate Monitoring</span>
          <!-- A pill-shaped label showing heart rate feature -->
          <span class="pill activity">üìà Activity Tracking</span>
          <!-- A pill for tracking feature -->
          <span class="pill goal">üß≠ Goal Setting</span>
          <!-- A pill for goal setting -->
          <span class="pill achieve">üèÜ Achievement System</span>
          <!-- A pill for achievement system -->
        </div>

        <div class="cta">
          <!-- CTA = Call To Action (buttons to navigate somewhere) -->
          <a class="btn" href="dashboard">Let's Go ‚Üí</a>
          <!-- Button that links to dashboard page -->
          <a class="btn secondary" href="recovery">Learn More</a>
          <!-- Secondary button that links to recovery page -->
        </div>

        <div class="stats">
          <!-- Section showing some numbers/statistics -->
          <div class="stat">
            <div class="num">10M+</div>
            <div class="lbl">USERS</div>
          </div>
          <!-- First stat: total users -->

          <div class="stat">
            <div class="num">500K+</div>
            <div class="lbl">WORKOUTS TRACKED</div>
          </div>
          <!-- Second stat: workouts tracked -->

          <div class="stat">
            <div class="num">99.9%</div>
            <div class="lbl">ACCURACY</div>
          </div>
          <!-- Third stat: system accuracy -->
        </div>
      </div>

      <div class="figure">
        <!-- Right side image area -->
        <img src="/assets/band.jpg" alt="Fitness Band"/>
        <!-- Displays an image of the fitness band -->
      </div>
    </section>
  </div>

  <div class="footer-space"></div>
  <!-- Empty div to create some extra space at the bottom (for footer area maybe) -->
